<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChronometerApp">

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/black"
        android:gravity="center"
        android:textColor="#4CAF50"
        android:textStyle="bold" />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#3E000000"
        android:textColor="@color/black"
        android:layout_below="@+id/chronometer"
        android:layout_centerHorizontal="true"
        android:text="Start"
        android:id="@+id/start"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#3E000000"
        android:textColor="@color/black"
        android:layout_below="@+id/start"
        android:layout_centerHorizontal="true"
        android:text="Stop"
        android:id="@+id/stop"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#3E000000"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/stop"
        android:text="Restart"
        android:id="@+id/restart"/>
    <Button
    android:layout_width="200dp"
    android:layout_height="wrap_content"
        android:backgroundTint="#3E000000"
        android:textColor="@color/black"
    android:layout_below="@+id/restart"
    android:layout_centerHorizontal="true"
    android:text="Setformat"
    android:id="@+id/setformat"/>
    <Button
    android:layout_width="200dp"
    android:layout_height="wrap_content"
        android:backgroundTint="#3E000000"
        android:textColor="@color/black"
    android:layout_below="@+id/setformat"
    android:layout_centerHorizontal="true"
    android:text="Clearformat"
    android:id="@+id/clearformat"/>



</RelativeLayout>